        "eslint-plugin-react-refresh": "^0.4.20",
        "globals": "^16.3.0",
        "tw-animate-css": "^1.3.5",
        "typescript": "~5.8.3",
        "typescript-eslint": "^8.38.0",
        "vite": "^7.0.4"
